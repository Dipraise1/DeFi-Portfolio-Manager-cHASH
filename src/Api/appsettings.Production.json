{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AppSettings": {
    "Cache": {
      "DefaultExpiryMinutes": 10,
      "PriceExpiryMinutes": 5,
      "CoinListExpiryHours": 48,
      "UseRedisCache": true
    },
    "Redis": {
      "ConnectionString": "redis:6379,password=${REDIS_PASSWORD},abortConnect=false",
      "InstanceName": "DefiPortfolioManager:",
      "DatabaseId": 0
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": ["https://${DOMAIN}", "http://frontend"]
  }
} 